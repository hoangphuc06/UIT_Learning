<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".QuestionActivity">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:id="@+id/rlt"
            android:background="@color/teal_700"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:id="@+id/grid_answer"
                >

            </androidx.recyclerview.widget.RecyclerView>

            <TextView
                android:id="@+id/txt_question_cout"
                android:layout_marginLeft="8dp"
                android:layout_toRightOf="@+id/grid_answer"
                android:text="0/30"
                android:layout_centerVertical="true"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/txt_timer"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="8dp"
                android:text="20:00"
                android:layout_centerVertical="true"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </RelativeLayout>
        <LinearLayout
            android:layout_margin="16dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <FrameLayout
                android:id="@+id/layout_image"
                android:layout_width="match_parent"
                android:layout_height="200dp">
                <ImageView
                    android:id="@+id/img_question"
                    android:scaleType="fitCenter"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"></ImageView>

                <ProgressBar
                    android:id="@+id/progress_bar"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    ></ProgressBar>

            </FrameLayout>
            <TextView
                android:id="@+id/txt_question_text"
                android:text="What do you chose ?"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"></TextView>

            <CheckBox
                android:id="@+id/ckbA"
                android:text="Answer A"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"></CheckBox>

            <CheckBox
                android:id="@+id/ckbB"
                android:text="Answer B"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"></CheckBox>

            <CheckBox
                android:id="@+id/ckbC"
                android:text="Answer C"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"></CheckBox>

            <CheckBox
                android:id="@+id/ckbD"
                android:text="Answer D"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"></CheckBox>

        </LinearLayout>

    </LinearLayout>
    <RelativeLayout
        android:layout_alignParentBottom="true"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:layout_margin="@dimen/_10sdp"
            android:id="@+id/bt_pre"
            android:backgroundTint="@color/teal_700"
            android:drawableRight="@drawable/ic_baseline_navigate_before_24"
            android:layout_width="@dimen/_60sdp"
            android:layout_height="@dimen/_40sdp"/>
        <Button
            android:layout_margin="@dimen/_10sdp"
            android:layout_alignParentRight="true"
            android:id="@+id/bt_next"
            android:backgroundTint="@color/teal_700"
            android:drawableLeft="@drawable/ic_baseline_navigate_next_24"
            android:layout_width="@dimen/_60sdp"
            android:layout_height="@dimen/_40sdp"/>

    </RelativeLayout>

</RelativeLayout>